# Server Settings
NODE_ENV=production
PORT=3000
BASE_URL=https://your-domain.com

# Jobber API Configuration
JOBBER_CLIENT_ID=your_client_id_here
JOBBER_CLIENT_SECRET=your_client_secret_here
JOBBER_REDIRECT_URI=https://your-domain.com/auth/callback
JOBBER_API_VERSION=2023-11-15

# Security
SESSION_SECRET=generate_32_char_random_string_here
ENCRYPTION_KEY=generate_32_char_random_string_here

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false

# Agent Configuration
AGENT_NAME=DuetRight_AI
AUTONOMOUS_MODE=true
LEARNING_ENABLED=true
PROACTIVE_MONITORING=true
DECISION_CONFIDENCE_THRESHOLD=0.75

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/jobber-agent
LOG_RETENTION_DAYS=30

# Database (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/jobber_agent

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature Flags
FEATURE_AI_SCHEDULING=true
FEATURE_PREDICTIVE_ANALYTICS=true
FEATURE_VOICE_COMMANDS=false
FEATURE_MULTI_LANGUAGE=false
